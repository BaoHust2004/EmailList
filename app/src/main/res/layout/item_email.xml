<!-- res/layout/item_email.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Icon tròn với chữ cái đầu tiên của người gửi -->
    <TextView
        android:id="@+id/tvSenderIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_background"
        android:gravity="center"
        android:text="E"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <!-- Tên người gửi -->
        <TextView
            android:id="@+id/tvSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sender Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Nội dung tóm tắt của email -->
        <TextView
            android:id="@+id/tvEmailSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email subject"
            android:textColor="#888888"
            android:textSize="14sp" />

        <!-- Nội dung tóm tắt ngắn -->
        <TextView
            android:id="@+id/tvEmailSnippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email snippet goes here"
            android:textColor="#888888"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Thời gian nhận email -->
    <TextView
        android:id="@+id/tvEmailTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:34 PM"
        android:textColor="#888888"
        android:textSize="12sp" />
</LinearLayout>
